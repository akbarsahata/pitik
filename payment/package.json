{
  "name": "whale-service",
  "version": "1.0.6",
  "main": "src/index.ts",
  "engines": {
    "node": "18.12.0"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --coverage",
    "test:controller": "NODE_ENV=test jest ./api --verbose --forceExit",
    "test:dao": "NODE_ENV=test jest ./dao --verbose --forceExit",
    "test:service": "NODE_ENV=test jest ./services --verbose --forceExit",
    "test:integration": "NODE_ENV=test jest ./integration --verbose --silent=true",
    "test:ci": "NODE_ENV=test jest ./api/controller ./dao ./api/services --verbose --forceExit --coverage",
    "prepare": "husky install",
    "dev": "NODE_ENV=development ts-node-dev --rs -r dotenv/config src/index.ts",
    "debug": "NODE_ENV=development ts-node-dev --rs --inspect -r dotenv/config src/index.ts",
    "start": "pm2 start",
    "build": "tsc",
    "staging": "NODE_ENV=staging tsc && pm2 start",
    "production": "NODE_ENV=production tsc && pm2 start",
    "container": "node -r dotenv/config --expose-gc --max-old-space-size=2048 dist/src/index.js",
    "migration:up": "typeorm-ts-node-commonjs migration:run --dataSource src/datasources/connection/postgresql.connection.ts",
    "migration:down": "typeorm-ts-node-commonjs migration:revert --dataSource src/datasources/connection/postgresql.connection.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Pitik-Digital-Indonesia/payment.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pitik-Digital-Indonesia/payment/issues"
  },
  "homepage": "https://github.com/Pitik-Digital-Indonesia/payment#readme",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.8.1",
    "@fastify/cors": "^8.3.0",
    "@fastify/error": "^3.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/request-context": "^4.2.0",
    "@golevelup/ts-jest": "^0.3.8",
    "@google-cloud/secret-manager": "^4.2.2",
    "@sentry/node": "^7.57.0",
    "@sentry/tracing": "^7.57.0",
    "@sinclair/typebox": "^0.29.4",
    "@types/deasync": "^0.1.2",
    "@types/figlet": "^1.5.6",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.0",
    "@types/node-fetch": "^2.5.12",
    "@types/pino": "^7.0.5",
    "abortcontroller-polyfill": "^1.7.5",
    "bullmq": "^4.2.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "fastify": "^4.19.2",
    "fastify-decorators": "^3.15.0",
    "figlet": "^1.6.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.4.5",
    "node-fetch": "^2.6.7",
    "pg": "^8.11.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "reflect-metadata": "^0.1.13",
    "string-strip-html": "^13.4.1",
    "typeorm": "^0.3.17",
    "typescript": "^4.4.4",
    "ulid": "^2.3.0",
    "xendit-node": "^1.21.16"
  }
}
